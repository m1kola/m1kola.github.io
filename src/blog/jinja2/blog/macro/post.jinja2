</nav>
{% endmacro %}

{% macro heading(post) %}
    {% if post.image %}
        {% set background_image = post.image.url %}
    {% else %}
        {% set background_image = static('base/img/default_bg.jpg') %}
    {% endif %}

    <header class="intro-header" style="background-image: url('{{ background_image }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{{ post.title }}</h1>
                        {% if post.subtitle %}
                            <h2 class="subheading">{{ post.subtitle }}</h2>
                        {% endif %}
                        <span class="meta">{{ post.created_at|date() }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endmacro %}